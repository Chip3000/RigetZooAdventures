<!--
    Home page
-->
@{
    // Setting the title for the page dynamically using ViewData
    ViewData["Title"] = "Home";
}

<body>
    <!-- Row for the banner image -->
    <div class="row justify-content-center">
        <div class="col-md-12 mb-4 text-center">
            <!-- Banner image with center alignment -->
            <img src="https://placehold.co/760x254" class="img-fluid rounded-banner" alt="Placeholder image" style="display: block; margin: 0 auto;"> <!-- Added style for block and margin -->
        </div>
    </div>

    <!-- Row for the About Us section -->
    <div class="row justify-content-center">
        <div id="box" class="col-md-6 mb-4">
            <section id="rounded-box2" class="p-4 shadow-sm bg-#8e604a">
                <div class="header-box">
                    <h2>Go To Our Zoo!</h2>
                </div>
                <div id="proceed-btn" class="d-flex justify-content-center mt-4">
                    <a href="Home/AboutZoo" class="custom-button">Visit Now!</a>
                </div>
            </section>
        </div>
        <div id="box" class="col-md-6 mb-4">
            <section id="rounded-box2" class="p-4 shadow-sm bg-#8e604a">
                <div class="header-box">
                    <h2>Go To Our Hotel!</h2>
                </div>
                <div id="proceed-btn" class="d-flex justify-content-center mt-4">
                    <a href="Home/AboutHotel" class="custom-button">Visit Now!</a>
                </div>
            </section>
        </div>
    </div>
</body>

<style>
    /*
            Sets style for boxes on the home page
        */
    #rounded-box1 {
        background-image: url('https://media.istockphoto.com/id/474690025/photo/children-at-zoo-feeding-giraffe.jpg?s=612x612&w=0&k=20&c=pAswjPrUAelDOscYpbZE0yePHiREBYwqSB7quGBvg68='); /* Replace with your image path */
        background-size: cover; /* Cover the entire box */
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent the image from repeating */
        border-radius: 20px; /* Rounds the corners of the box */
        border: solid;
        padding: 20px; /* Padding inside the box */
        font-size: 20px; /* Font size for text inside the box */
    }

    #rounded-box2 {
        background-image: url('https://img.resized.co/breaking--zoo-hotels-where-you-can-watch-the-animals-from-your-room.jpg'); /* Replace with your image path */
        background-size: cover; /* Cover the entire box */
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent the image from repeating */
        border-radius: 20px; /* Rounds the corners of the box */
        border: solid;
        padding: 20px; /* Padding inside the box */
        font-size: 20px; /* Font size for text inside the box */
    }

    #box{
        padding-left: 150px;
        padding-right: 150px;
        width: 50%;
    }

    .header-box {
        background-color: #8e604a;
        padding: 5px;
        border-radius: 10px;
        color: white;
        text-align: center;
    }

    ul {
        list-style-type: disc; /* Sets the list style to disc (bullet points) */
        padding-left: 20px; /* Adds left padding to the list for indentation */
    }

    .rounded-banner {
        border-radius: 5%; /* Rounds the corners of the banner image */
        object-fit: cover; /* Ensures the image covers the area without distortion */
        margin-left: 4%; /* Adds left margin for positioning */
        max-width: auto; /* Allows the image to scale automatically */
        height: auto; /* Maintains the aspect ratio of the image */
    }

    .custom-button {
        background-color: #8e604a; /* Background color */
        color: white; /* Text color */
        padding: 10px 20px; /* Padding */
        text-decoration: none; /* Remove underline */
        border-radius: 5px; /* Rounded corners */
        display: inline-block; /* Make it behave like a button */
        transition: background-color 0.3s; /* Smooth transition for hover effect */
        margin-top: 50%
    }

        .custom-button:hover {
            background-color: #6b4a3a; /* Darker shade on hover */
        }
</style>