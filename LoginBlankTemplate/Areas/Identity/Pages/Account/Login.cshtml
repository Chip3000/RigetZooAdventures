@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <section id="rounded-box" class="p-4 shadow-sm bg-#8e604a">
            <form id="account" method="post">
                <h2 class="text-center">Enter details to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!--
                    Enter email box on the login page
                -->
                <div id="email-box" class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <!--
                    Enter Password box on the login page
                -->
                <div id="password-box" class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div id="check-box" class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="mt-3">
                    <!--
                        Register as new user
                    -->
                    <p class="text-left">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
                <div id="login-btn" class="d-flex justify-content-end mt-4">
                    <button id="login-submit" type="submit" class="btn btn-primary">Login</button>
                </div>
                
            </form>
        </section>
    </div>
</div>

<style>
    #rounded-box {
        /*
        Styling for background box
        */
        border-radius: 20px;
        background-color: #76a56a;
    }

    #email-box > input {
        /*
        Styling for email box
        */
        background-color: #5E8953;
        border-color: #5E8953;
        border-width: 4px;
        border-style: solid;
        padding: 10px 15px;
    }

    #password-box > input {
        /*
        Styling for password box
        */
        background-color: #5E8953;
        border-color: #5E8953;
        border-width: 4px;
        border-style: solid;
        padding: 10px 15px;
    }

    #check-box {
        /*
        Styling for check box
        */
        width: 145px;
        background-color: #5E8953;
        border-color: #5E8953;
        border-width: 4px;
        border-style: solid;
        padding-left: 3px;
    }

        #check-box > label{
            margin: 0;
        }

    .mt-3 a {
        color: #5E8953;
        text-decoration: none;
    }

        .mt-3 a:hover {
            color: #8e604a;
        }

    #login-btn > button {
        background-color: #5E8953;
        border-color: #5E8953;
        border-width: 4px;
        border-style: solid;
        padding: 10px 15px;
        color: black;
    }

        #login-btn > button:hover {
            background-color: #8e604a;
        }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}